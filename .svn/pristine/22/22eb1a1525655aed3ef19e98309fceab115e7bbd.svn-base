/*header*/
.header{
    position: fixed;
    z-index: 100;
    width: 100%;
    left: 0;
    top: 0;
    height: 1rem;
    background:linear-gradient(0deg,rgba(57,159,0,1),rgba(38,112,26,1));
	 box-shadow:0px 1px 0px 0px rgba(224,224,224,1);;
    color: #fff;
    .header-left{
    	position: absolute;
    	left: 0;
    	top: 0;
	    width: 1rem;
	    height: 1rem;
	    text-align: center;
	    font-size: .5rem;
	    line-height:1rem;
	    color: #fff;
	}
	.header-center{
	    font-size: .36rem;
	    line-height: 1rem;
	    text-align: center;
	}
    .header-right{
    	position:absolute;
    	right: 0;
    	top: 0;
      	width: 1rem;
      	height: 1rem;
      	line-height: 1rem;
      	font-size: .28rem;
      	text-align: center;
      	color: #fff;
      }
      .iconfont{
        font-size: .5rem;
      }
}
